/* pages/goods/goods.wxss */
/* 整体的背景图 */
.parent {
  background-color: #EAEAEA
}


.iv_barber {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-top: 10px
}

.item {
  margin: 10px 16px;
  border-radius: 10px;
  background-color:	#FFFFFF
}

/* 面板的上中下 */
.item_top{
  padding: 8px 16px;
  height: 42px;
  display: flex;
  align-items: center;
  justify-content: space-between
}
.item_center{
  padding: 8px 16px;
  height: 17px;
  display: flex;
  align-items: center;
  justify-content: space-between
}
.item_down{
  padding: 8px 16px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: space-between
}


.top_left {
  display: flex;
  align-items: center
}

/* 名字 */
.tv_name {
  font-size: 16px;
  margin: 0px 12px;
}

/* 职位 */
.tv_job {
  font-size: 12px;
  color: #9e9e9e;
  padding: 1px 2px;
  height: 12px;
  border-radius: 6px;
}

/* 价格 */
.tv_price {
  font-size: 12px;
  color: #EE9572;
  margin-right:10px 
}

/* 好评率 */
.tv_reedback_rate {
  font-size: 12px;
  margin: 0px 16px 0px 2px;
  color: #6e6e6e;
}

/* 预约数 */
.tv_reservation_number {
  font-size: 12px;
  color: #6e6e6e;
  margin: 0px 16px 0px 2px;
}

/* 预约数 */
.tv_achieve_number {
  font-size: 12px;
  color: #6e6e6e;
  margin: 0px 16px 0px 2px;
}

/* 预约的按钮 */
.btn_appointment {
  width: 55px;
  height: 25px;
  border-radius: 16px;
  line-height: 25px;
  text-align: center;
  font-size: 16px;
  background-color:#00CD66
  
}


/*生成技能标签 */
.btn_option {
  height: 17px;
  border-radius: 16px;
  line-height: 15px;
  text-align: center;
  font-size: 12px;
  background-color:	#C5C1AA;
  padding: 2px 2px;
  margin-right: 10px;
  color: #6e6e6e;
}
