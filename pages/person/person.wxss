/* 上面的主面板 */
.avatar-wrapper {
  border-radius: 5px;
  background-image: url(http://img5.imgtn.bdimg.com/it/u=1823332651,80941870&fm=26&gp=0.jpg);
  padding: 30px 0px;
}
 
 /*  */
.avatar-wrapper .avatar {
  margin: 0 auto;
  text-align: center;
}
 
.avatar-wrapper .avatar image {
  width: 100px;
  height: 100px;
}
 
.avatar-wrapper .text {
  text-align: center;
  color: #fff;
}
 
.listimg image {
  margin-right: 5px;
  margin-left: 15px;
  vertical-align: middle;
  width: 20px;
  height: 20px;
}
 
.content{
  display: flex;
  margin-top: 10px;
  margin-bottom: 10px;
}
 
